#!/usr/bin/env perl
use strict;
use warnings;

use File::Spec::Functions qw(splitdir rel2abs catdir catfile);
use List::Util qw(first);

my @dirs = splitdir (rel2abs '.');
my $end = first { $dirs[$_] eq 'scheme' } (reverse 0..$#dirs);
@dirs = @dirs[0 .. $end];
my $root = catdir @dirs;

exec 'racket',
  '-e', '(define (main) (void))',
  '-f', (catfile $root, qw(lib racket utils.scm)),
  '-f', (catfile $root, qw(lib define-syntax utils.scm)),
  '-f', (catfile $root, qw(lib utils.scm)),
  '-f', @ARGV,
  '-e', '(begin (main) (void))';
