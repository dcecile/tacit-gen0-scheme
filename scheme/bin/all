#!/usr/bin/env perl
use strict;
use warnings;

use File::Spec::Functions qw(splitdir rel2abs catdir catfile);
use List::Util qw(first);

my @dirs = splitdir (rel2abs '.');
my $end = first { $dirs[$_] eq 'scheme' } (reverse 0..$#dirs);
@dirs = @dirs[0 .. $end];
my $root = catdir @dirs;

system((catfile $root, qw(bin tinyscheme)), @ARGV);
system((catfile $root, qw(bin csi)), @ARGV);
system((catfile $root, qw(bin racket)), @ARGV);
