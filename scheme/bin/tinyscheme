#!/usr/bin/env perl
use strict;
use warnings;

use File::Spec::Functions qw(splitdir rel2abs catdir catfile);
use List::Util qw(first);

my @dirs = splitdir (rel2abs '.');
my $end = first { $dirs[$_] eq 'scheme' } (reverse 0..$#dirs);
@dirs = @dirs[0 .. $end];
my $root = catdir @dirs;

my $bin = (catfile $root, qw(bin tinyscheme-bin));
exec $bin,
  '-e', '(define (main) \'())',
  (catfile $root, qw(bin tinyscheme-src init.scm)),
  (catfile $root, qw(src utils platform__tinyscheme.scm)),
  (catfile $root, qw(src utils use__tinyscheme.scm)),
  (catfile $root, qw(src utils use.scm)),
  @ARGV;
